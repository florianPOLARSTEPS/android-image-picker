<resources>

    <style name="ef_AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/ef_colorAccent</item>
        <item name="colorPrimary">@color/ef_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ef_colorPrimaryDark</item>

        <item name="ef_colorBackground">@color/ef_black_alpha_50</item>
        <item name="ef_colorHighlight">@color/ef_colorAccent</item>

        <item name="ef_textPrimaryColor">@color/ef_white</item>
        <item name="ef_textSecondaryColor">@color/ef_grey</item>
        <item name="ef_textHighlightColor">@color/ef_white</item>
    </style>

    <style name="ef_AppTheme.Picker" parent="ef_AppTheme">

        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:itemTextAppearance">@style/ef_AppTheme.ItemTextStyle</item>

        <item name="ef_camera_icon">@drawable/ic_camera_white</item>
        <item name="ef_done_icon">@drawable/ic_done_white</item>
        <item name="ef_overflow_icon">@drawable/ic_more_vert</item>

    </style>

    <style name="ef_CustomToolbarTheme" parent="@style/Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/ef_colorTextPrimary</item>
        <item name="actionMenuTextColor">@color/ef_colorTextPrimary</item>
    </style>

    <style name="ef_AppTheme.ItemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/ef_color_dark</item>
    </style>

</resources>
